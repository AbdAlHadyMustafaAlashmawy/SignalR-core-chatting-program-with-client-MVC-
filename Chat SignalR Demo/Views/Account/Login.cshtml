@model Chat_SignalR_Demo.DTOs.UserLoginDTO

@{
    ViewData["Title"] = "Login";
}
<style>
    body {
        background-color: #f0f8ff;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #333;
        margin: 0;
        padding: 0;
    }

    .container {
        margin-top: 50px;
    }

    .card {
        border-radius: 10px;
        border: none;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
        background-color: #ffcad4;
    }

    .card-body {
        padding: 30px;
    }

    h2 {
        font-size: 1.75rem;
        margin: 0;
    }

    h4 {
        font-size: 1.25rem;
        color: #666;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        border-radius: 20px;
        border: 1px solid #ccc;
        padding: 10px 15px;
        font-size: 1rem;
    }

        .form-control:focus {
            border-color: #ffb3c1;
            box-shadow: 0 0 5px rgba(255, 179, 193, 0.8);
            outline: none;
        }

    .btn-primary {
        background-color: #ffb3c1;
        border-color: #ffb3c1;
        border-radius: 20px;
        padding: 10px 20px;
        font-size: 1.1rem;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #ff8096;
            border-color: #ff8096;
        }

    .form-check-input {
        margin-top: 6px;
    }

    .form-check-label {
        margin-left: 5px;
        font-size: 0.9rem;
    }

    .text-center a {
        color: #ffb3c1;
        text-decoration: none;
        transition: color 0.3s ease;
    }

        .text-center a:hover {
            color: #ff8096;
        }

</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white text-center">
                    <h2>Login</h2>
                </div>
                <div class="card-body">
                    <h4 class="text-muted">Enter your credentials</h4>
                    <hr />
                    <form asp-action="Login">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" placeholder="Enter your username" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Password" class="control-label"></label>
                            <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-group form-check">
                            <input class="form-check-input" asp-for="Remember_me" id="rememberMeCheckBox" />
                            <label class="form-check-label" for="rememberMeCheckBox">
                                @Html.DisplayNameFor(model => model.Remember_me)
                            </label>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">Login</button>
                        </div>
                        <p class="text-center mt-3">I dont have account <a asp-action="Signup">Signup</a></p>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="text-center mt-3">
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
