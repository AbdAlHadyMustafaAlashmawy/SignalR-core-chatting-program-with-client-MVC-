@model Chat_SignalR_Demo.DTOs.UserSignupDTO
@using CaptchaMvc.HtmlHelpers;
@using CaptchaMvc;

@{
    ViewData["Title"] = "Signup";
}
<style>

body {
    font-family: 'Poppins', sans-serif;
    background-color: #f2f7ff;
    color: #4d4d4d;
    margin: 0;
    padding: 0;
}

.container {
    margin-top: 50px;
}

h1 {
    font-size: 2.5rem;
    color: #5c85d6;
    font-weight: bold;
}

.form-group {
    margin-bottom: 1.5rem;
}

.form-label {
    font-size: 1.1rem;
    color: #4d4d4d;
}

.form-control {
    border-radius: 8px;
    border: 1px solid #d1d8e0;
    padding: 10px 15px;
    font-size: 1rem;
    transition: border-color 0.3s ease;
}

.form-control:focus {
    border-color: #5c85d6;
    box-shadow: 0 0 8px rgba(92, 133, 214, 0.2);
}

.invalid-feedback {
    font-size: 0.9rem;
    color: #e74c3c;
}

.btn-primary {
    background-color: #5c85d6;
    border-color: #5c85d6;
    font-size: 1.2rem;
    padding: 10px;
    border-radius: 8px;
    transition: background-color 0.3s ease;
}

.btn-primary:hover {
    background-color: #476bb2;
    border-color: #476bb2;
}

.btn-block {
    width: 100%;
}

p.text-center a {
    color: #5c85d6;
    text-decoration: none;
    font-weight: bold;
    transition: color 0.3s ease;
}

p.text-center a:hover {
    color: #476bb2;
}

@@media (max-width: 768px) {
    h1 {
        font-size: 2rem;
    }

    .form-control {
        font-size: 0.95rem;
    }

    .btn-primary {
        font-size: 1rem;
        padding: 8px;
    }
}

</style>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center mb-4">Signup</h1>
            <form asp-action="Signup" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="form-label">Name</label>
                    <input asp-for="Name" class="form-control" required>
                    <div class="invalid-feedback">Please enter your name.</div>
                </div>
                <div class="form-group">
                    <label asp-for="email" class="form-label">Email</label>
                    <input asp-for="email" class="form-control" required>
                    <div class="invalid-feedback">Please enter a valid email address.</div>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" type="password" class="form-control" required>
                    <div class="invalid-feedback">Please enter a password.</div>
                </div>
                <div class="form-group">
                    <label asp-for="Confirm_Password" class="form-label">Confirm Password</label>
                    <input asp-for="Confirm_Password" type="password" class="form-control" required>
                    <div class="invalid-feedback">Please confirm your password.</div>
                </div>
                <button type="submit" class="btn btn-primary btn-block mt-3">Signup</button>
            </form>
            <p class="text-center mt-3">Already have an account? <a asp-action="Login">Login</a></p>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Example of form validation using JavaScript
        (function () {
            'use strict';
            window.addEventListener('load', function () {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function (form) {
                    return form.checkValidity() === false;
                });
                validation.forEach(function (invalid) {
                    invalid.classList.add('was-validated');
                });
            }, false);
        })();
    </script>
}